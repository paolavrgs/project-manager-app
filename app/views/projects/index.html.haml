.app_content-header
  %h4 Proyectos
  = link_to 'Nuevo proyecto', new_project_path, class: 'btn btn-custom btn-sm'
.container-fluid
  .row
    - @projects.each do |project|
      .col-lg-4
        .project_card
          .project_card-header
            .project_card-label
              .project_card-info
                = link_to project, class: 'project_card-title' do
                  = project.title
                %span.badge.badge_custom.red= project.status
            .project_card-toolbar
              %a.btn.btn-clean.btn-sm.btn-icon.btn-icon-md{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-ellipsis-h
              .dropdown-menu.dropdown-menu-fit.dropdown-menu-right
                %ul
                  %li
                    = link_to edit_project_path(project) do
                      %i.fa.fa-pencil
                      %span Editar
                  %li
                    = link_to project, method: :delete, data: { confirm: 'Are you sure?' } do
                      %i.fa.fa-trash
                      %span Eliminar
          .project_card-body
            .body-stats
              .body-item
                %span.body-item-span Inicio
                .body-label.start-date
                  %span= project.start_date.strftime('%d %b, %y')
              .body-item
                %span.body-item-span Fin
                .body-label.due-date
                  %span= project.due_date.strftime('%d %b, %y')
              .body-item
                %span.body-item-span Desarrolladores
                .members-avatar
                  .avatar-img{ "data-toggle"=>"tooltip", "data-placement"=>"bottom", title: "John Doe" }
                    %img{ src: 'http://dashboards.webkom.co/jquery/sumea/assets/img/avatars/46.jpg' }
                  .avatar-img{ "data-toggle"=>"tooltip", "data-placement"=>"bottom", title: "Jane Doe" }
                    %img{ src: 'http://dashboards.webkom.co/jquery/sumea/assets/img/avatars/16.jpg' }
                
          .project_card-footer
            .flex-fill
              %span Progress
              .d-flex.align-items-center
                .progress{style: "height: 5px;width: 100%;"}
                  .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "100", role: "progressbar", style: "width: 78%;"}
                %span
                  78%
            -# = link_to 'Ver +', project, class: 'btn btn-custom btn-sm'