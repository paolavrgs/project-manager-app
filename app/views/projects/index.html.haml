-# %p#notice= notice
%h4 Projects
= link_to 'Nuevo proyecto', new_project_path, class: 'btn btn-custom btn-sm'
.container
  .row
    - @projects.each do |project|
      .col-lg-6
        .project_card
          .project_card-header
            .project_card-label
              .project_card-media
                %span.media-circle
                  = image_tag(project.logo_image) if project.logo_image.attached?
              .project_card-info
                = link_to project, class: 'project_card-title' do
                  = project.title
            .project_card-toolbar
              %a.btn.btn-clean.btn-sm.btn-icon.btn-icon-md{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-ellipsis-h
              .dropdown-menu.dropdown-menu-fit.dropdown-menu-right
                %ul
                  %li
                    = link_to edit_project_path(project) do
                      %i.fa.fa-pencil
                      %span Editar
                  %li
                    = link_to project, method: :delete, data: { confirm: 'Are you sure?' } do
                      %i.fa.fa-trash
                      %span Eliminar
          .project_card-desc
            %span= project.description.truncate(120)
          .project_card-body
            .body-stats
              .body-item
                %span.body-item-span Start Date
                .body-label.start-date
                  %span= project.start_date.strftime('%d %b, %y')
              .body-item
                %span.body-item-span Due Date
                .body-label.due-date
                  %span= project.due_date.strftime('%d %b, %y')
              .body-item.flex-fill
                %span Progress
                .d-flex.align-items-center
                  .progress{style: "height: 5px;width: 100%;"}
                    .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "100", role: "progressbar", style: "width: 78%;"}
                  %span
                    78%
          .project_card-footer
            = link_to 'Detalles', project, class: 'btn btn-custom btn-sm'