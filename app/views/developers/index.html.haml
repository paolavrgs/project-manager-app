.app_content-header
  %h4 Desarrolladores
  = link_to 'Nuevo desarrollador', new_developer_path, class: 'btn btn-custom btn-sm'
.container-fluid
  .row
    - @developers.each do |dev|
      .col-lg-4
        .project_card
          .project_card-header
            .project_card-label
              .project_card-media
                %span.media-circle
                  = image_tag(dev.avatar) if dev.avatar.attached?
              .project_card-info
                = link_to dev, class: 'project_card-title' do
                  = dev.name
                %span.badge.badge_custom= dev.level
            .project_card-toolbar
              %a.btn.btn-clean.btn-sm.btn-icon.btn-icon-md{"data-toggle" => "dropdown", href: "#"}
                %i.fa.fa-ellipsis-h
              .dropdown-menu.dropdown-menu-fit.dropdown-menu-right
                %ul
                  %li
                    = link_to edit_developer_path(dev) do
                      %i.fa.fa-pencil
                      %span Editar
                  %li
                    = link_to dev, method: :delete, data: { confirm: 'Are you sure?' } do
                      %i.fa.fa-trash
                      %span Eliminar
          .project_card-body
            - dev.techs.each do |tech|
              %span.badge.badge-primary= tech
          .project_card-footer
            .flex-fill
              %span Disponibilidad
              .d-flex.align-items-center
                .progress{style: "height: 5px;width: 100%;"}
                  .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => dev.progress, role: "progressbar", style: "width: #{dev.progress}%;"}
                %span
                  = dev.progress.to_s + '%'
