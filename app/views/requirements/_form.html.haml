.container
  .row
    .col-lg-12
      .project_card
        = form_for @requirement do |form|
          - if @requirement.errors.any?
            #error_explanation
              %h2
                = pluralize(task.errors.count, "error")
                prohibited this task from being saved:
              %ul
                - task.errors.full_messages.each do |message|
                  %li= message
          .form-group
            = form.label 'Requerimiento'
            = form.text_field :title, class: 'form-control'
          .form-group
            = form.label 'Horas'
            = form.text_field :hours, class: 'form-control'
          .actions
            = form.submit 'Actualizar requerimiento', class: 'btn btn-custom btn-sm'
