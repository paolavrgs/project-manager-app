.app_content-header
  %h4 Tablero General
.container-fluid
  .row
    .col-lg-6
      .project_card
        .project_card-header
          .project_card-title Cantidad de proyectos
        .project_card-body
          %ul.list-group
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.red Freeze
              2 proyectos
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.yellow Planning
              2 proyectos
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.blue Doing
              2 proyectos
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.blue IQC
              2 proyectos
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.blue Verify Client
              2 proyectos
            %li.list-group-item.d-flex.justify-content-between
              %span.badge.badge_custom.green Done
              2 proyectos
    .col-lg-6
      .project_card
        .project_card-header
          .project_card-title Disponibilidad de Desarrolladores
        .project_card-body
          %ul.list-group.mb-0
            - @developers.each do |dev|
              - task_progress = 0
              - task_progress = ((dev.tasks.completed.size.to_f / dev.tasks.size.to_f) * 100).round unless dev.tasks.count.zero?
              %li.list-group-item
                .clearfix
                  .float-left
                    %strong
                      = task_progress.to_s + '%'
                  .float-right
                    %small.text-muted= dev.name
                .progress.progress-xs{style: "height: 5px;"}
                  .progress-bar.bg-azure{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => task_progress, role: "progressbar", style: "width: #{task_progress}%"}
